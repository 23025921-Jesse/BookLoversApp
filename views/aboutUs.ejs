      display: flex;
      justify-content: space-around;
      flex-wrap: wrap;
    }

    .column {
      flex: 1;
      margin: 15px;
      max-width: 300px;
    }

    .card {
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
