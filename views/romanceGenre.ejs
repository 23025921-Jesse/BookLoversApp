<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
    <title>BookLovers</title>
    <style>
        .navbar {
            margin-bottom: 20px;
        }

   

        body {
            background-image: url('/images/background.jpg');
            background-size: cover;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            padding-top: 80px;
        }

        .book-detail {
            margin-bottom: 30px;
            display: flex;
            align-items: center;
        }

        .book-detail img {
            max-width: 100%;
            height: auto;
            margin-right: 20px; 
        }

        .book-info {
            flex: 1; 
        }

        .footer {
            background-color: #333;
            color: white;
            text-align: center;
            padding: 20px 0;
            margin-top: auto;
        }

        .footer .fas {
            margin: 0 5px; 
            font-size: 1.2rem;
        }
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <%- include('navbar') %>
    
    <!-- Main Content -->
    <div class="container">
        <br>
        <div class="text-center">
            <h2>Romance Genre</h2>
        </div>
        <br>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Image</th>
                    <th>Author</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(function(book) { %>
                <tr>
                    <td><%= book.name %></td>
                    <td><img src="/images/<%= book.image %>" width="50" height="50" alt="Book Image"></td>
                    <td><%= book.author %></td>
                    <td><a href="/books/<%= book.bookId %>" class="btn btn-primary">Details</a></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Footer -->
    <%- include('footer') %>
</body>
</html>
