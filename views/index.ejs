<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Font Awesome for icons -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css">
  <title>BookStore App</title>
  <style>
    /* Set background color of the webpage to beige */
    body {
      background-image: url('/images/background.jpg'); 
      background-size: cover;
      padding-top: 80px; 
    }

    /* Style for the navbar */
    .navbar {
      margin-bottom: 20px;
    }

    /* Style for the carousel images */
    .carousel-item img {
      object-fit: cover; 
      height: 700px; 
      width: 750%;
      max-width: 100%;
      border-radius: 10px; 
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); 
    }

    .carousel-caption {
      background-color: rgba(0, 0, 0, 0.5);
      border-radius: 10px;
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
    }

    .table-bordered th, .table-bordered td {
      border: 1px solid #ddd !important;
    }

    /* Style for the footer */
    footer {
      background-color: #333;
      color: white;
      text-align: center;
      padding: 10px 0;
      margin-top: 30px;
    }

    footer .fa-book {
      margin: 0 5px;
      font-size: 1.2rem;
    }

    /* Adjust carousel top margin to align with navbar */
    #bookCarousel {
      margin-top: -56px; 
    }

    .floating-cart-btn {
      position: fixed;
      bottom: 20px;
      right: 20px;
      z-index: 1000;
      border: none;
      outline: none;
      background-color: #f39c12;
      color: white;
      cursor: pointer;
      padding: 15px;
      border-radius: 50%;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
    }

    .floating-cart-btn:hover {
      background-color: #e67e22;
    }

    .card-img-top {
      height: 200px;
      object-fit: cover;
    }
  </style>
</head>
<body>
  <!-- Navigation Bar -->
  <%- include('navbar') %>

  <!-- Carousel Section -->
  <div id="bookCarousel" class="carousel slide" data-bs-ride="carousel">
    <!-- Carousel Indicators -->
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#bookCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#bookCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#bookCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <!-- Carousel Inner -->
    <div class="carousel-inner">
      <!-- Carousel Item 1 -->
      
      <div class="carousel-item active">
        <img src="images/1.jpg" height="500" class="d-block w-100" alt="First Slide">
        <div class="carousel-caption d-none d-md-block">
          <h5>BookLovers</h5>
        </div>
      </div>
      <%  %>
      <!-- Carousel Item 2 -->
      
      <div class="carousel-item">
        <img src="images/2.jpg" height="500" class="d-block w-100" alt="Second Slide">
        <div class="carousel-caption d-none d-md-block">
          <h5>Genres</h5>
        </div>
      </div>
      <%  %>
      <!-- Carousel Item 3 -->
      
      <div class="carousel-item">
        <img src="images/3.jpg" height="500" class="d-block w-100" alt="Third Slide">
        <div class="carousel-caption d-none d-md-block">
          <h5>Reviews</h5>
        </div>
      </div>
      <%  %>
    </div>
    <!-- Carousel Controls -->
    <button class="carousel-control-prev" type="button" data-bs-target="#bookCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#bookCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

  <!-- Main Content -->
  <div class="container">
    <br>
    <div class="text-center"><h2>Bestsellers</h2></div>
    <br>

    <!-- Books Cards -->
    <div class="row">
      <% for(let i=0; i < Math.min(5, books.length); i++) { %>
      <div class="col-md-4">
        <div class="card mb-4">
          <img src="images/<%= books[i].image %>" class="card-img-top" alt="<%= books[i].name %>">
          <div class="card-body">
            <h5 class="card-title"><%= books[i].name %></h5>
            <p class="card-text"><strong>Author:</strong> <%= books[i].author %></p>
            <p class="card-text"><strong>Genre:</strong> <%= books[i].genre %></p>
            <a href="/books/<%= books[i].bookId %>" class="btn btn-primary">View Details</a>
          </div>
        </div>
      </div>
      <% } %>
    </div>
  </div>

  <!-- Floating Cart Button -->
  <button class="floating-cart-btn" onclick="location.href='/cart'">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
      <path d="M0 1.5A.5.5 0 0 1 .5 1h1a.5.5 0 0 1 .485.379L2.89 5H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 14H3a.5.5 0 0 1-.491-.408L.61 1.607 0 1.5zm3.1 4.5l1.25 7h7.292l1.25-7H3.1zM5.5 15a1.5 1.5 0 1 1 3 0 1.5 1.5 0 0 1-3 0zm5.5 0a1.5 1.5 0 1 1 3 0 1.5 1.5 0 0 1-3 0z"/>
    </svg>
  </button>

  <!-- Footer -->
  <%- include('footer') %>
</body>
</html>
